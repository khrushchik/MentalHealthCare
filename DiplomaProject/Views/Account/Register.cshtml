@model DiplomaProject.ViewModel.RegisterViewModel

    <div class="container" style="background: #EEEEEE">
        <h2 style="text-align: center;">Реєстрація</h2>
        <div class="row justify-content-center">
            <form method="post" asp-controller="Account" asp-action="Register">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label><br />
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label><br />
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname" class="control-label"></label><br />
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label><br />
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordConfirm" class="control-label"></label><br />
                    <input asp-for="PasswordConfirm" class="form-control" />
                    <span asp-validation-for="PasswordConfirm"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Реєстрація" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
